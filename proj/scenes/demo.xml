<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="testCamera">
        <perspective id="defaultCamera" near="5" far="500" angle="45">
            <from x="6" y="6" z="6" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <perspective id="testCamera" near="5" far="500" angle="30">
            <from x="0" y="0" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />  
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/board_wood.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
        <material id="demoMaterial2" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1" b="1" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="10" z="5" /><!--
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />-->
        </transformation>
    </transformations>

    <animations>
        <animation id="diner" isLoop="isLoop">
            <keyframe instant="2">
                <translate x="0" y="0.0" z="0.0" />
                <rotate angle_x="0" angle_y="-180" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
            <keyframe instant="4">
                <translate x="0" y="0" z="0.0" />
                <rotate angle_x="0" angle_y="-360" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
        </animation>
    </animations>

    <primitives>
        <primitive id="demoTriangle">
            <triangle x1="-1.5" y1="0" z1="0" x2="1.5" y2="0" z2="0" x3="0" y3="3" z3="0" />
        </primitive>
    </primitives>

    <components>
    
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="2" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial2" />
            </materials>
            <texture id="demoTexture" length_s="6" length_t="1.5"/>
            <children>
                <primitiveref id="demoTriangle" />
            </children>
        </component>

    </components>
</lxs>