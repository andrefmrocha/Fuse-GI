
<lxs>
    <scene root="scene" axis_length="5"/>

    <views default="defCam">
        <perspective id="defCam" near="5" far="500" angle="60">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="mainLight" enabled="1">
            <location x="-10" y="20" z="-10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />  
        </omni>
        <omni id="secondLight" enabled="1">
            <location x="10" y="20" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />  
        </omni>
    </lights>

    <textures>
        <texture id="boardWood" file="scenes/images/board_wood.jpg" />
        <texture id="outerBoardWood" file="scenes/images/outer_board_wood.jpg" />
        <texture id="boardCell" file="scenes/images/board_cell.jpg" />
        <texture id="outerBoardCell" file="scenes/images/outer_board_cell.jpg" />
        <texture id="blueDisc" file="scenes/images/blue_disc.jpg" />
        <texture id="whiteDisc" file="scenes/images/white_disc.jpg" />
        <texture id="blackDisc" file="scenes/images/black_disc.jpg" />
        <texture id="tableWood" file="scenes/images/table_wood.jpg" />
    </textures>

    <materials>
        <material id="whiteMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="test">
            <translate x="80" y="0" z="0" />
            <rotate axis="y" angle="-90" />
        </transformation>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="1" x2="1" y2="0" z2="0" x3="0" y3="1" z3="0" />
        </primitive>
        <primitive id="rectangle">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>
        <primitive id="square">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="28" stacks="10"/>
        </primitive>
        <primitive id="torus">
            <torus inner="0.1" outer="0.9" slices="20" loops="40"/>
        </primitive>
        <primitive id="cylinder">
            <cylinder base="1" top="1" height="1" slices="30" stacks="10"/>
        </primitive>
        <primitive id="based_cylinder">
            <basedcylinder base="0.5" top="0.5" height="0.5" slices="20" stacks="1"/>
        </primitive>
        <primitive id="cone">
            <cylinder base="1" top="0" height="1" slices="30" stacks="5"/>
        </primitive>
    </primitives>

    <components>
                              
        <component id="scene">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="table" />
            </children>
        </component>

        <component id="table">
            <transformation>
                <translate x="0" y="-4.25" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tableWood" />
            <children>
                <componentref id="tableTop" />
                <componentref id="tableLeg1" />
                <componentref id="tableLeg2" />
                <componentref id="tableLeg3" />
                <componentref id="tableLeg4" />
            </children>
        </component>

        <component id="tableTop">
            <transformation>
                <translate x="0" y="4" z="0" />
                <scale x="5" y="0.5" z="10" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="unitCube" />
            </children>
        </component>

        <component id="tableLeg1">
            <transformation>
                <translate x="-2.25" y="0" z="-4.75" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="tableLeg" />
            </children>
        </component>

        <component id="tableLeg2">
            <transformation>
                <translate x="2.25" y="0" z="-4.75" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="tableLeg" />
            </children>
        </component>

        <component id="tableLeg3">
            <transformation>
                <translate x="-2.25" y="0" z="4.75" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="tableLeg" />
            </children>
        </component>

        <component id="tableLeg4">
            <transformation>
                <translate x="2.25" y="0" z="4.75" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="tableLeg" />
            </children>
        </component>

        <component id="tableLeg">
            <transformation>
                <translate x="0" y="2" z="0" />
                <scale x="0.5" y="4" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="unitCube" />
            </children>
        </component>

        <component id="unitCube">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="unitCubeTop" />
                <componentref id="unitCubeBottom" />
                <componentref id="unitCubeFront" />
                <componentref id="unitCubeBack" />
                <componentref id="unitCubeRight" />
                <componentref id="unitCubeLeft" />
            </children>
        </component>
        <component id="unitCubeTop">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="unitCubeBottom">
            <transformation>
                <translate x="0" y="-0.5" z="0" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="unitCubeFront">
            <transformation>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="unitCubeBack">
            <transformation>
                <translate x="0" y="0" z="-0.5" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="unitCubeRight">
            <transformation>
                <translate x="-0.5" y="0" z="0" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <component id="unitCubeLeft">
            <transformation>
                <translate x="0.5" y="0" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>
    </components>
</lxs>